---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Inglobals</title>
		<meta name="description" content="Auditoria inteligente para un futuro sostenible" />
	</head>
	<body class="bg-slate-50 text-azulCorp font-sans">
		<div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
			<div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-violetaIA/10 rounded-full blur-[120px] animate-pulse"></div>
			<div class="absolute bottom-0 right-1/4 w-[600px] h-[600px] bg-verdeEsm/10 rounded-full blur-[130px]"></div>
			<div
				class="absolute inset-0 bg-[radial-gradient(#e2e8f0_1px,transparent_1px)] [background-size:40px_40px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] opacity-30"
			></div>
		</div>
		<Navbar />

		<main class="min-h-screen pt-24">
			<slot />
		</main>

		<Footer />
	</body>
</html>
